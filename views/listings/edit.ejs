<% layout('/layout/boilerplate') -%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit your Listing</h3>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control" value="<%= listing.title %>">
                    </div>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea>
                    </div>
                    <div class="invalid-feedback">Description should be valid!</div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input type="text" name="listing[image]" class="form-control" value="<%= listing.image %>">
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>">
                    </div>
                    <div class="invalid-feedback">Price should be valid!</div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" class="form-control" value="<%= listing.location %>">
                        </div>
                        <div class="invalid-feedback">Location should be valid!</div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" class="form-control" value="<%= listing.country %>">
                        </div>
                        <div class="invalid-feedback">Country should be valid!</div>
                    </div>
                </form>
                <button class="btn btn-dark edit-btn mb-3">Update</button>
            </div>
        </div>
    </body>