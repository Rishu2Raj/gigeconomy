<!-- Razorpay Script -->
<script>
    document.getElementById('rzp-btn').onclick = async function (e) {
        const response = await fetch('/bookings/create-order', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                amount: <%= listing.price %> * 100, // Razorpay uses paise
                listingId: "<%= listing._id %>"
            }),
        });
        const data = await response.json();
        console.log("Order created from server:", data);
        var options = {
            key: "<%= process.env.RAZORPAY_KEY_ID %>", // public key
            amount: <%= listing.price %> * 100,
            currency: "INR",
            name: "<%= listing.title %>",
            description: "Booking Payment",
            image: "<%= listing.image.url %>",
            order_id: data.id,
            handler: function (response) {
                alert("Payment Successful!\nPayment ID: " + response.razorpay_payment_id);
                // You can redirect or post this to backend for storing booking
                window.location.href = `/bookings/confirm?paymentId=${response.razorpay_payment_id}&orderId=${data.id}&listingId=<%= listing._id %>`;
            },
            prefill: {
                name: "<%= currUser?.username || '' %>",
                email: "<%= currUser?.email || '' %>"
            },
            theme: {
                color: "#3399cc"
            }
        };
        var rzp1 = new Razorpay(options);
        rzp1.open();
        e.preventDefault();
    }
</script>